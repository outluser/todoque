#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t,i;
    string s;
     cin>>t;
     while(t--)
       {
          cin>>s;
          cout<<(char)tolower(s[0]);
          for(i=1;i<s.length();i++)
           {
               if(isupper(s[i]))
                 {cout<<"_"; }
                cout<<(char)tolower(s[i]); 
           }
            cout<<"\n";
       }
 
       return 0;
}
